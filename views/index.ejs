
     <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-9">
                <a href="student/create" class="btn btn-primary mb-3">Add New Student</a>
                <div class="card">
                    <div class="card-body">
                        <h3>All Student</h3>
                        <hr>
                        <table class="table table-striped" >
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>name</th>
                                    <th>Email</th>
                                    <th>Cell</th>
                                    <th>Photo</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                               <% allStudent.forEach((element,index) => { %>
                                <tr>
                                    <td>1</td>
                                    <td><%= element.name %> </td>
                                    <td><%= element.email %></td>
                                    <td><%= element.cell %></td>
                                    <td><img style=" width: 60px; height : 60px; object-fit:cover;" src="assets/uploads/<%= element.photo %>" alt=""></td>
                                    <td><a href="/student/<%= element._id %>" class="btn btn-primary btn-sm"><i class="fa-solid fa-eye"></i></a></td>
                                    <td><a href="/student/edit/<%= element._id %>" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen-to-square"></i></a></td>
                                    <td><a href="/student/delete/<%= element._id %>" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a></td>
                                </tr>
                               <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
     </div>
    