
     <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <a class="btn btn-primary mb-3" href="/student">Back</a>
                <div class="card shadow">
                    <div class="card-body">
                        <h3>Add Student</h3>
                        <hr>
                        <form action="/student/edit/<%=editSingleData.id%>" method="POST" enctype="multipart/form-data">
                            <div class="my-3">
                                <label for="">name</label>
                                <input name="name" value="<%= editSingleData.name %> " type="text" class="form-control">
                            </div>
                            <input type="hidden" name="_method" value="patch">
                            <div class="my-3">
                                <label for="">Emil</label>
                                <input name="email" value="<%= editSingleData.email %> " type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Cell</label>
                                <input name="cell" value="<%= editSingleData.cell %> " type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <h6>previous photo</h6>
                                <img style="max-width:100% ;" src="/assets/uploads/<%= editSingleData.photo %> " alt="">
                                <input type="text" name="old_photo" value="<%=editSingleData.photo%>">
                            </div>
                            <div class="my-3">
                                <label for="">Photo</label>
                                <input name="photo" type="file">
                            </div>
                            <div class="my-3">
                                <input class="btn btn-primary" type="submit" value="Update">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
     </div>
    